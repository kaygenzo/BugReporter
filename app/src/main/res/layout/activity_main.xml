<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="20dp">

    <Button
        android:id="@+id/disable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disable"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restart"
        app:layout_constraintTop_toBottomOf="@+id/disable"/>

    <Button
        android:id="@+id/reportBug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start reporting by email"
        app:layout_constraintTop_toBottomOf="@+id/restart"/>

    <Button
        android:id="@+id/release"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Release"
        app:layout_constraintTop_toBottomOf="@+id/reportBug"/>

    <Button
        android:id="@+id/askPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ask permission"
        app:layout_constraintTop_toBottomOf="@+id/release"/>

</androidx.constraintlayout.widget.ConstraintLayout>