<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fieldLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fieldSwitch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fieldText"
        tools:text="BlaBlaBla"
        android:gravity="center|start"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fieldText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="@+id/fieldSwitch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldLabel"
        tools:text="BlaBlaBla"
        android:gravity="center|start"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/fieldSwitch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        android:enabled="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>